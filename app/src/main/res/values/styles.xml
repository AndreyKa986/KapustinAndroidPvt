<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonForDz">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">75sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LoginEditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@color/loginEditText</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginButton">
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LinerLayoutForDz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="Dz3LinerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Dz3TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/two</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/monda_regular</item>
    </style>

    <style name="Dz3ValueTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/monda_bold</item>
    </style>

    <style name="Dz3TextView2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/one</item>
        <item name="android:fontFamily">@font/monda_bold</item>
    </style>

    <style name="Dz3TextView3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/two</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:fontFamily">@font/monda_regular</item>
    </style>
</resources>